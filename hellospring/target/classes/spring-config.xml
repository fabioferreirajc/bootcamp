<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="hello" class="org.academiadecodigo.stormrooters.HelloWorld">
       <property name="myName" value="Fábio"/>
    </bean>

    <bean id="world" class="org.academiadecodigo.stormrooters.HelloWorld">
        <constructor-arg name="oMeuNome" value="Fábio with constructor"/>
    </bean>

</beans>